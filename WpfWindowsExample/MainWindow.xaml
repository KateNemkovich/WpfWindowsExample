<Window x:Class="WpfWindowsExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWindowsExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- Свойство по умолчанию true, можно не прописывать -->
    <DockPanel LastChildFill="True">
       <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button Width="100" Height="50">  Button 1 </Button>
            <Button Width="100" Height="50"> Button 2 </Button>
        </StackPanel>
        
        <StackPanel>
            <TextBlock TextAlignment="Center">No Room Tags are placed in the model.</TextBlock>
            <ComboBox> ... </ComboBox>
        </StackPanel>
        
    </DockPanel>
</Window>